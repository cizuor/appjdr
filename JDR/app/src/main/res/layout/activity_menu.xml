<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"

    tools:context="com.example.rouzicpierre.jdr.Menu">

    <Button
        android:text="Mon perso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:onClick="gotomonperso"
        android:id="@+id/buttonmonperso" />

    <Button
        android:text="Nouveau perso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_below="@+id/buttonmonperso"
        android:layout_alignParentStart="true"
        android:onClick="gotonouveauperso"
        android:id="@+id/buttonnouveauperso" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/nompersofetch"/>

        <Button
            android:text="charger le perso "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonnouveauperso"
            android:layout_margin="20dp"
            android:layout_alignParentStart="true"
            android:onClick="gotochargerperso"
            android:id="@+id/chargerperso" />


    </LinearLayout>


</LinearLayout>
